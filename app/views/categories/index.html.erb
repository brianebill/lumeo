<div class="row span11">
	<h1 class="title">Categories</h1>
	<div class="span4 row well offset3">
	  <% @categories.each do |category| %>
				<%= button_to category.name, category, 
											:method => 'get',
	 										:class => 'btn btn-primary btn-small' %>
		   		<%= button_to 'Delete', category, 
			                :method => 'delete', 
							:class => 'btn btn-small btn-danger pull-right mtop-47' %>
	  <% end %>
	</div>
</div>
<%= render 'form' %>