<h1 class="title center">Add Category</h1>
<div class="offset2 span7 well">
  	 <%= simple_form_for @category, :html => { :class => 'form-horizontal' } do |f| %>
		<fieldset>
			<%= f.input :name, :label => 'Category' %>
		</fieldset>
		<div class="form-actions">
			<%= button_to 'Cancel', categories_path, :method => 'get', :class => 'btn btn-large pull-right mleft10' %>
		    <%= f.submit nil, :class => 'btn btn-primary btn-large pull-right' %>
	    </div>
  	<% end %>
</div>