<div class="row span12">
	<div class="span10">
		<h1 class="center title">Lumeo Private Messages</h1>
	</div>

	<div class="row span12 mtop20">
		<%= form_tag contacts_path, :method => 'get', :class => "form-search pull-right" do %>
	    	<%= text_field_tag :search, params[:search], :class => "input-xlarge", :placeholder => 'Enter a subject like "Login"' %>
	    	<%= submit_tag "Search", :title => nil %>
		<% end %>
	</div>

	<%= render 'contacts' %></div>
</div>