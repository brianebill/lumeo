<%= simple_form_for @course, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Course</legend>

    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>

    <%= f.fields_for :images do |img_field| %>
      Upload Photo <%= img_field.file_field :source %>
    <% end %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', courses_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

