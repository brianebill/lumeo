<div class="span10 offset1">
	<h1 class="center">Add Courses to Your Queue</h1>	
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th>Courses</th>
	      <th>Title</th>
	      <th>Description</th>
	      <th>Actions</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @courses.each do |course| %>
	      <tr>
	        <td><%= image_tag(course.source.url(:index), alt: course.title) %></td>	
	        <td><%= link_to course.title, course_path(course) %></td>
	        <td><%= course.description.html_safe %></td>
         	    <% if can? :update, @course %>
		             <td><%= link_to 'Edit', edit_course_path(course), :class => 'btn btn-mini' %></td>
		             <td> <%= link_to 'Destroy', course_path(course), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %></td>
		       <% end %>   
	      </tr>

	  </tbody>
	</table>
<% end %>
	<p><%= link_to 'Create a New Course', new_course_path, :class => 'btn btn-mini' %></p>
	</div>
