<div class="span10 title">
	<h1 class="center">Add Courses to Your Queue</h1>	
</div>

	<div class="row offset1 span9">
    <% @courses.each do |course| %>
      <div class="row">
        <div class="span2">
		<% if course.image %>
		 <%= image_tag course.image.source(:medium)  %>
		<% end %>
        </div>
        <div class="span5">
          <h1><%= course.title %></h1>
          <p><%= course.description %></p>
        </div>
        <div class="span2">
          <%= link_to 'Show', course, :class => 'btn btn-mini'%>
          <% if can? :update, @course %>
            <%= link_to 'Edit', edit_course_path(course), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', course, 
              confirm: 'Are you sure?', 
              method: :delete, 
              :class => 'btn btn-mini' %>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= button_to 'New Course', new_course_path, :method => 'get', :class => 'btn btn-primary btn-large pull-right' %>
  </div>
