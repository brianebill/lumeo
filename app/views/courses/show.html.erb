<div class="breadcrumbs span12 row">
	<p>
		<%= link_to "content", contents_path %>
		> <%= link_to "courses", courses_path %> > <%= @course.title.downcase %>
	</p>
</div>
<div class="mleft30">
	<% if can? :update, @course %>
	    <%= link_to 'New Course', new_course_path, :class => 'btn btn-primary btn-mini' %>
	    <%= link_to "Edit Course", edit_course_path(@course), :class => 'btn btn-mini' %>
		<%= link_to 'Delete', @course, 
	       confirm: 'Are you sure?', 
	       method: :delete, 
	       :class => 'btn btn-mini' %>
	<% end %>
</div>
<div class="row span12 mleft-40">
	<div class="show span6">
		<h1><%= @course.title %></h1>
		<h3><%= @course.subtitle.titleize %> with <%= link_to @course.pro.user.name, @course.pro %></h3>
		<p>Directed by <%= link_to @course.user.name, @course.user %></p>
	</div>
	<div class="span2 offset2 mtop40">
		<%= link_to 'Add this Course to my Queue', new_course_path, 
					:class => 'btn btn-primary btn-large' %>
	</div>
</div>
<div class="row span12">
	<div class="span2">
	       <% if @course.image %>
			<%= image_tag @course.image.source(:show) %>
		<% else %>
			<%= image_tag 'missing_show.png' %>
		<% end %>
		<p class="bold center"><%= @course.credits %> credits<br/>
			Price: Free</p>
	 </div>
	 <div class="span8 show center mleft20 mtop-20">
		<%= @course.teaser.html_safe %>
		<p>
		  <%= @course.description %>
		</p>
	</div>
</div>
<div class="w250 mleft80">	
	<h2>Videos</h2>
	<% @course.videos.each do |video| %>
		<%= video.title %>
	<% end %>
</div>


