<div class="row">
	<div class="offset1 span3">
        <% if @course.image %>
		 <%= image_tag @course.image.source %>
		<% end %>
  </div>

  <div class="span5">
		<h1 class="title"><%= @course.title %></h1>
		<p class="description center">
		  <%= @course.description %>
		</p>
	</div>
	<div class="offset1 span2 course_well">
			 <ul class="nav well course_nav">	
				<% if can? :update, @course %>
		     	     <li><%= link_to "Edit Course", edit_course_path(@course), :class => 'btn' %></li>
		             <li><%= link_to "Add Video", "#", :class => 'btn' %></li>
			    <% end %>
			 </ul>
	</div>
</div>
<div class="row">
	<div class="offset1 span9">
			 <%= render "videos/video" %>
		<div class="form-actions">
             <%= render 'shared/form_actions' %>
		</div>
		<% if can? :update, @course %>
		<h2>Add a video:</h2>
		<%= render "videos/form" %>
		 <% end %>
	</div>
</div>


