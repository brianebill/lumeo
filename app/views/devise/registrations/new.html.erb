<% provide(:title, "Become a Member") %>
<div class="row span4 offset4">
	  <h2 class="center title">Become a Member</h2>
	  <div class="well">
			 <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		      <%= f.error_notification %>
		  	   <div class="inputs">
		          <%= f.input :name, :required => true %>
		          <%= f.input :email, :required => true, :autofocus => true %>
		          <%= f.input :password, :required => true %>
		          <%= f.input :password_confirmation, :required => true %>
					<%= f.input_field :terms, :required => true %>
					  <div class="mtop-23 mleft20">I agree to the Lumeo <%= link_to 'terms of use', terms_path %></div>
		        </div>
		       <div class="form-actions">
		           <%= f.button :submit, "Sign up", :class => 'btn btn-primary btn-large pull-right' %>
				    <%= render "links" %>
		       </div>
		    <% end %>
	  </div>
</div>