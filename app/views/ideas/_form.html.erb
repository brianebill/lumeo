<div class="offset2 span7 mtop20 edit">
	<%= simple_form_for @idea, :html => { :multipart => true } do |f| %>
	   <fieldset class="well pleft80">
		<div class="mtop10">
		   <%= f.input :title, :label => 'Question' %>
			<p>Description</p>
		   <%= f.input_field :description, :id => 'edit_topic'  %>
		</div>
	  </fieldset>
	<fieldset class="well pleft80">
	    <%= f.simple_fields_for :image do |img_field| %>
				<h3>
					Upload Photo: <%= img_field.file_field :source, :class => 'mleft10' %>
				</h3>
	    <% end %>
	</fieldset>
	  <div class="well pleft80">
			<h3>Subject Tags:</h3>
				<%= f.association :tags, 
							:as => :check_boxes, 
							:collection => @tags, 
							:label => 'Pick one or more subjects' %>
		</div>
	   <div class ="form-actions">
	        <%= f.submit nil, :class => 'btn btn-primary btn-large pull-right' %>
	   </div>
	<% end %>
</div>
<script type="text/javascript">
	$('#edit_topic').wysihtml5();
</script>