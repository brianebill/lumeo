<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<div class="row">
	<table class="table table-striped pretty">
	   <thead>
		  <tr>
		    <th><%= sortable "title" %></th>
			<th><%= sortable "created_at", "When" %></th>
			<th><%= sortable "idea.user", "Requested by" %></th>
		  </tr>
	   </thead>
	   <tbody>
	   <% @ideas.each do |idea| %>
	     <tr>
	       <td><%= idea.title %></td>
	       <td><%= idea.created_at %></td>
		   <td><%= idea.user.name %></td>
		   <td><%= link_to 'Show', idea, :class => 'btn btn-mini'%></td>
		   <% if can? :update, @course %>
	   	   <td><%= link_to 'Edit', edit_idea_path(idea), :class => 'btn btn-mini' %></td>
		       <td><%= link_to 'Destroy', idea, 
		                    confirm: 'Are you sure?', 
		                    method: :delete, 
		                    :class => 'btn btn-mini' %></td>
	       <% end %>
	     </tr>
	  <% end %>
	  </tbody>
	</table>
	<div class="pull-right"><%= will_paginate @ideas %></div>	
</div>