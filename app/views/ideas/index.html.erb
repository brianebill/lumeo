<div class="row span12">
	<div class="span10">
		<h1 class="center title">Ideas</h1>
		<p class="center">Check out the Ideas below. If you don't see what you're looking for, send a new Idea by clicking on the big blue button below</p>
	</div>
</div>

<div class="row span12 mtop20">
	<%= form_tag ideas_path, :method => 'get', :class => "form-search pull-right" do %>
    	<%= text_field_tag :search, params[:search], :class => "input-xlarge", :placeholder => 'Enter a subject like "Photo"' %>
    	<%= submit_tag "Search", :title => nil %>
	<% end %>
</div>

<div id="ideas"><%= render 'ideas' %></div>