<p id="notice"><%= notice %></p>
<div class="row">
	<div class="span2 offset1">
	 
	</div>
		<div class="span5">
			    <h1><%= @idea.title %></h1>
			    <p><%= @idea.who %></p>
			    <p><%= @idea.description %></p>


			    <% if can? :update, @idea %>
				    <%= link_to 'Edit Request', edit_idea_path(@idea), :class => 'btn btn-mini' %>
					<%= link_to 'Delete Request', @idea, 
					                    confirm: 'Are you sure?', 
					                    method: :delete, 
					                    :class => 'btn btn-mini' %>
	                 <%= link_to 'New Request', new_idea_path, :class => 'btn btn-mini' %>
				<% end %>
	     </div>

</div>
<div class="row offset2">
    <%= link_to 'Back to Requests', ideas_path, :class => 'btn btn-mini' %>
</div>