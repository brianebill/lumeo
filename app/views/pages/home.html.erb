<% provide(:title, 'Home') %>
<% if user_signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3><i class="icon-fire"></i> Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<div id="home_row_1">
	  <div class="row">
	    <div class="span6"><%= render 'layouts/home_exam' %></div>
	    <div class="span6"><%= render 'layouts/home_call' %></div>
	  </div>
	</div>
	<div class="row">
	    <div class="span12"><%= render 'layouts/home_features' %></div>
	</div>
<% end %> 


	      
	
	    
