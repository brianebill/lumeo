<% provide(:title, 'Home') %>
<% if user_signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3><i class="icon-fire"></i> Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
	<div class="row span12">
	    <%= render 'layouts/home_call' %>
	  </div>
	<div class="row span12">
	   <%= render 'layouts/home_features' %>
	</div>
<% end %> 


	      
	
	    
