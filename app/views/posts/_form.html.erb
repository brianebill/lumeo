<div class="offset1 span8">
  <%= simple_form_for @post, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
    <fieldset>
      <%= f.input :title %>
      <%= f.input :index_text %>
      <%= f.input :show_text %>
      <%= f.association :categories, :as => :check_boxes, :collection => @categories %>

      <%= f.fields_for :image do |img_field| %>
        Upload Photo <%= img_field.file_field :source %>
      <% end %>
    </fieldset>

    <div class ="title">
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
