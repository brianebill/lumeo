<div class="offset1 span8">
<%= simple_form_for @problem, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
   <fieldset>
	   <%= f.input :title %>
	   <%= f.input :description %>
  </fieldset>
  	<div class="well">
		<h3>Subject Tags:</h3>
			<%= f.association :tags, 
						:as => :check_boxes, 
						:collection => @tags, 
						:label => 'Pick one or more subjects' %>
	</div>
  <div class ="actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
</div>