<div class="row span12">
	<div class="span10">
		<h1 class="center title">Problems</h1>
		<p class="center">Check out the Problems listed below. If you don't see you're issue, create a new Support Ticket by clicking on the button below</p>
	</div>
</div>

<div class="row span12 mtop20">
	<%= form_tag problems_path, :method => 'get', :class => "form-search pull-right" do %>
    	<%= text_field_tag :search, params[:search], :class => "input-xlarge", :placeholder => 'Enter a subject like "Photo"' %>
    	<%= submit_tag "Search", :title => nil %>
	<% end %>
</div>

<div id="problems"><%= render 'problems' %></div>