<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<div class="row">
	<table class="table table-striped pretty">
	   <thead>
		  <tr>
		    <th>Score</th>
		    <th><%= sortable "title" %></th>
			<th><%= sortable "created_at", "When" %></th>
			<th><%= sortable "question.user.name", "Member" %></th>
		  </tr>
	   </thead>
	   <tbody>
	   <% @questions.each do |question| %>
	     <tr>
		    <td>
				 <%= form_for question, :url => vote_question_path(question) do |f| %>
					 <p class="center"><%= submit_tag "Up Vote", :name => :up %></p>
					 <h1 class="center"><%= vote_total question.user_votes %></h1>
					 <p class="center"><%= submit_tag "Down Vote", :name => :down %></p>
				 <% end %>
		   </td>
	       <td><h3><%= question.title %></h3></td>
	       <td><%= time_ago_in_words(question.created_at) %> ago</td>
	       <td><%= question.user.name %></td>

		   <td><%= link_to 'Show', question, :class => 'btn btn-mini'%></td>
		   <% if can? :update, @course %>
	   	   <td><%= link_to 'Edit', edit_question_path(question), :class => 'btn btn-mini' %></td>
		       <td><%= link_to 'Destroy', question, 
		                    confirm: 'Are you sure?', 
		                    method: :delete, 
		                    :class => 'btn btn-mini' %></td>
	       <% end %>
	     </tr>
	  <% end %>
	  </tbody>
	</table>
	<div class="pull-right"><%= will_paginate @questions %></div>	
</div>