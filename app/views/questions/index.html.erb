<div class="row span12">
	<div class="span10">
		<h1 class="center title">Questions</h1>
		<p class="center">Check out the Questions below. If you don't see what you're looking for, submit a new question by clicking on the big blue button below</p>
	</div>
</div>

<div class="row span12 mtop20">
	<%= form_tag requests_path, :method => 'get', :class => "form-search pull-right" do %>
    	<%= text_field_tag :search, params[:search], :class => "input-xlarge", :placeholder => 'Enter a subject like "Sports"' %>
    	<%= submit_tag "Search", :title => nil %>
	<% end %>
</div>

<div id="questions"><%= render 'questions' %></div>