<div class="offset3 span6 mtop20">
<%= simple_form_for @request, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
   <fieldset class="well">
	   <% if current_user.has_role? :admin %>
	       <%= f.input :subject, :placeholder => 'no commas' %>
	   <% end %>
	   <%= f.input :title %>
 	   <%= f.input :who, :label => 'Taught by' %>
	   <%= f.input :description %>
   </fieldset>
	<fieldset class="well">
	    <%= f.simple_fields_for :image do |img_field| %>
				<h3>
					Upload Photo: <%= img_field.file_field :source, :class => 'mleft10' %>
				</h3>
	    <% end %>
	<fieldset>
  <div class ="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary pull-right btn-large m5' %>
  </div>
<% end %>
</div>