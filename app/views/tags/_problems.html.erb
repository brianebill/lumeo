<div class="row">
	<% @tag.problems.each do |problem| %>
		<div class="span2">
			<% if problem.image %>
				<%= image_tag problem.image.source(:show) %>
			<% else %>
				<%= image_tag 'missing_show.png' %>
			<% end %>
		</div>
		<div class="span5">
		   		<h1><%= link_to problem.title, problem %></h1>
				<p class="bold">Posted by: <%= link_to problem.user.name, @user %><br/></p>
		   		<p class="show-text"><%= problem.description %></p>
				<p>&nbsp;</p>
				<p>&nbsp;</p>
		</div>
	<% end %>
</div>